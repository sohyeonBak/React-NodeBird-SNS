{
    "parser": "babel-eslint",
    "parserOptions" : {
        "ecmaVersion" : 2020,
        "sourceType" : "module",
        "ecmaFeatures" : {
            "jsx" : true
        }
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "extends" : [
        "airbnb"
    ],
    "plugins" : [
        "import",
        "react-hooks"
    ],
    "rules": {
        "jsx-a11y/label-has-associated-control" : "off",
        "jsx-a11y/anchor-is-vaild" : "off",
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "no-console" : "off",
        "no-underscore-dangle":"off",
        "react/forbid-prop-types":"off",
        "react/jsx-one-expression-per-line" : "off",
        "object-curly-newline":"off",
        "linebreak-style":"off",
        "no-param-reassign" : "off"
    }
}